<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <Button
        android:id="@+id/tluz"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:text="TODAS LAS LUCES"
        android:textSize="12sp"
        android:onClick="Luzt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/eluz"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="20dp"
        android:text="ENTRADA"
        android:textSize="12sp"
        android:onClick="Luze"
        app:layout_constraintBottom_toTopOf="@+id/comluz"
        app:layout_constraintEnd_toStartOf="@+id/dpluz"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tluz" />

    <Button
        android:id="@+id/dpluz"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:text="HABITACIÃ“N PRINCIPAL"
        android:textSize="12sp"
        android:onClick="LuzDP"
        app:layout_constraintBottom_toTopOf="@+id/cocluz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/eluz"
        app:layout_constraintTop_toBottomOf="@+id/tluz" />

    <Button
        android:id="@+id/comluz"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="20dp"
        android:text="COMEDOR"
        android:onClick="Luzcom"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/d1luz"
        app:layout_constraintEnd_toStartOf="@+id/cocluz"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eluz" />

    <Button
        android:id="@+id/cocluz"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:text="COCINA"
        android:onClick="LuzCoc"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/d2luz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/comluz"
        app:layout_constraintTop_toBottomOf="@+id/dpluz" />

    <Button
        android:id="@+id/d1luz"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="20dp"
        android:text="DORMITORIO 1"
        android:textSize="12sp"
        android:onClick="LuzD1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/d2luz"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comluz" />

    <Button
        android:id="@+id/d2luz"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:text="DORMITORIO 2"
        android:textSize="12sp"
        android:onClick="LuzD2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/d1luz"
        app:layout_constraintTop_toBottomOf="@+id/cocluz" />

</androidx.constraintlayout.widget.ConstraintLayout>